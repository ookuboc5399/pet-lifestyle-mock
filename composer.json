{
    "name": "cakephp/app",
    "description": "CakePHP skeleton app",
    "homepage": "https://cakephp.org",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "cakephp/cakephp": "^5.0",
        "cakephp/migrations": "^4.0",
        "cakephp/plugin-installer": "^2.0",
        "cakephp/bake": "^3.0",
        "cakephp/twig-view": "^2.0",
        "mobiledetect/mobiledetectlib": "^4.8"
    },
    "require-dev": {
        "cakephp/debug_kit": "^5.0",
        "cakephp/cakephp-codesniffer": "^5.0",
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible JavaScript and CSS minification.",
        "dereuromark/cakephp-ide-helper": "After baking your code, this keeps your annotations in sync with the code accessed from IDE.",
        "phpstan/phpstan": "PHPStan focuses on finding errors in code without actually running it."
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p src/ tests/",
        "cs-fix": "phpcbf --colors src/ tests/",
        "stan": "phpstan analyse",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cakephp/plugin-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}